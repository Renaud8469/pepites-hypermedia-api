{
  "home": {
    "prefix": "/api",
    "transitions": {
      "root": {
        "accessibleFrom": ["root"],
        "href": "/api/",
        "method": "get"
      }
    }
  },
  "application": {
    "prefix": "/api/application",
    "transitions": {
      "application-read": {
        "accessibleFrom": ["root", "application-read", "application-create", "pepite-applications"],
        "href": "/{id}",
        "isUrlTemplate": true,
        "method": "get"
      },
      "application-create": {
        "accessibleFrom": ["root"],
        "href": "/",
        "method": "post",
        "template":{
          "project": {
            "name": "string",
            "summary": "string",
            "type": "string",
            "site": "string",
            "status": "string",
            "blog": "string",
            "facebook": "string",
            "twitter": "string",
            "siret": "string",
            "activitySummary": "string",
            "stepSummary": "string",
            "sector": "integer",
            "otherSector": "integer",
            "motiviation": "string",
            "teamType": "string",
            "linkedin": "string",
            "team": "array"
          },
          "contact": {
            "name": "string",
            "firstname": "string",
            "email": "email",
            "phone": "phone",
            "situation": "string",
            "isRenew": "bool",
            "schoolYear": "integer"
          },
          "profile": {
            "gender": "string",
            "situation": "string",
            "askD2E": "bool",
            "nationality": "string",
            "motivation": "string",
            "isPartTime": "bool",
            "hasActivity": "bool",
            "activity": "string",
            "isUnemployed": "bool",
            "isFreelance": "bool",
            "birthDate": "Date",
            "birthPlace": "string",
            "ine": "string",
            "address": "string",
            "cp": "integer",
            "city": "string",
            "country": "string",
            "twitter": "string",
            "facebook": "string",
            "linkedin": "string",
            "viadeo": "string"
          },
          "career": {
            "bac": {
              "isOriginal": "bool",
              "type": "string",
              "country": "string",
              "year": "integer",
              "stream": "string",
              "establishment": "string",
              "city": "string"
            },
            "diploma": {
              "year": "string",
              "type": "integer",
              "name": "string",
              "sector": "string",
              "establishment": "string",
              "city": "string"
            },
            "tutor": {
              "name": "string",
              "firstname": "string",
              "email": "string",
              "skill": "string",
              "replaceInternship": "bool",
              "replaceModule": "bool",
              "askYearOff": "bool"
            },
            "entrepreneurship": "array"
          },
          "pepite": {
            "0": "integer",
            "1": "integer",
            "region": "integer",
            "establishment": "integer",
            "pepite": "integer",
            "askCoworking": "bool"
          }
        }  
      },
      "application-update": {
        "accessibleFrom": ["root", "application-read", "application-create"],
        "href": "/{id}",
        "isUrlTemplate": true,
        "method": "put",
        "template": {
          "project": {
            "name": "string",
            "summary": "string",
            "type": "string",
            "site": "string",
            "status": "string",
            "blog": "string",
            "facebook": "string",
            "twitter": "string",
            "siret": "string",
            "activitySummary": "string",
            "stepSummary": "string",
            "sector": "integer",
            "otherSector": "integer",
            "motiviation": "string",
            "teamType": "string",
            "linkedin": "string",
            "team": "array"
          },
          "contact": {
            "name": "string",
            "firstname": "string",
            "email": "email",
            "phone": "phone",
            "situation": "string",
            "isRenew": "bool",
            "schoolYear": "integer"
          },
          "profile": {
            "gender": "string",
            "situation": "string",
            "askD2E": "bool",
            "nationality": "string",
            "motivation": "string",
            "isPartTime": "bool",
            "hasActivity": "bool",
            "activity": "string",
            "isUnemployed": "bool",
            "isFreelance": "bool",
            "birthDate": "Date",
            "birthPlace": "string",
            "ine": "string",
            "address": "string",
            "cp": "integer",
            "city": "string",
            "country": "string",
            "twitter": "string",
            "facebook": "string",
            "linkedin": "string",
            "viadeo": "string"
          },
          "career": {
            "bac": {
              "isOriginal": "bool",
              "type": "string",
              "country": "string",
              "year": "integer",
              "stream": "string",
              "establishment": "string",
              "city": "string"
            },
            "diploma": {
              "year": "string",
              "type": "integer",
              "name": "string",
              "sector": "string",
              "establishment": "string",
              "city": "string"
            },
            "tutor": {
              "name": "string",
              "firstname": "string",
              "email": "string",
              "skill": "string",
              "replaceInternship": "bool",
              "replaceModule": "bool",
              "askYearOff": "bool"
            },
            "entrepreneurship": "array"
          },
          "pepite": {
            "0": "integer",
            "1": "integer",
            "region": "integer",
            "establishment": "integer",
            "pepite": "integer",
            "askCoworking": "bool"
          }
        }


      },
      "application-send": {
        "accessibleFrom": ["application-create", "application-read", "application-update"],
        "href": "/{id}/send",
        "isUrlTemplate": true,
        "method": "put"
      }
    }
  },
  "answer": {
    "prefix": "/api/committeeAnswer",
    "transitions":{
      "application-review": {
        "accessibleFrom": ["root", "application-read"],
        "href": "/{id}",
        "isUrlTemplate": true,
        "method": "put",
        "template": {
          "opinion": "string",
          "hasD2E": "bool",
          "status": "accepted||refused"
        },
        "authRequired": true
      }
    }
  },
  "pepite": {
    "prefix": "/api/pepite",
    "transitions": {
      "pepite-list": {
        "accessibleFrom": ["root", "pepite-read"],
        "href": "/",
        "method": "get"
      },
      "pepite-read": {
        "accessibleFrom": ["root", "pepite-list"],
        "href": "/{id}",
        "isUrlTemplate": true,
        "method": "get"
      },
      "pepite-applications": {
        "accessibleFrom": ["root", "pepite-list", "pepite-read"],
        "href": "/{id}/application",
        "isUrlTemplate": true,
        "method": "get",
        "authRequired": true
      }
    }
  },
  "committee": {
    "prefix": "/api/pepite/{pepiteId}/committee",
    "isUrlTemplate": true,
    "transitions": {
      "committee-list": {
        "accessibleFrom": ["pepite-list", "pepite-read"],
        "href": "/",
        "isUrlTemplate": true,
        "method": "get"
      },
      "committee-next": {
        "accessibleFrom": ["pepite-list", "pepite-read","committee-list"],
        "href": "/next",
        "isUrlTemplate": true,
        "method": "get"
      },
      "committee-create": {
        "accessibleFrom": ["root", "commitee-list", "pepite-read"],
        "href": "/",
        "isUrlTemplate": true,
        "method": "post",
        "template": {
          "date": "Date",
          "lastApplicationDate": "Date",
          "message": "string"
        },
        "authRequired": true
      },
      "committee-update": {
        "accessibleFrom": ["commitee-list", "committee-create"],
        "href": "/{committeeId}",
        "isUrlTemplate": true,
        "method": "put",
        "template": {
          "date": "Date",
          "lastApplicationDate": "Date",
          "message": "string"
        }, 
        "authRequired": true
      },
      "committee-delete": {
        "accessibleFrom": ["commitee-list", "committee-create", "committee-update"],
        "href": "/{committeeId}",
        "isUrlTemplate": true,
        "method": "delete",
        "authRequired": true
      }
    }
  },
  "region": {
    "prefix": "/api/region",
    "transitions": {
      "region-list": {
        "accessibleFrom": ["root"],
        "href": "/",
        "method": "get"
      },
      "region-read": {
        "accessibleFrom": ["root", "region-list"],
        "href": "/{id}",
        "isUrlTemplate": true,
        "method": "get"
      },
      "region-schools": {
        "accessibleFrom": ["root", "region-list", "region-read"],
        "href": "/{id}/establishment",
        "isUrlTemplate": true,
        "method": "get"
      }, 
      "region-pepites": {
        "accessibleFrom": ["root", "region-list", "region-read"],
        "href": "/{id}/pepite",
        "isUrlTemplate": true,
        "method": "get"
      }
    }
  },
  "school": {
    "prefix": "/api/establishment",
    "transitions": {
     "school-list": {
        "accessibleFrom": ["root"],
        "href": "/",
        "method": "get"
      },
      "school-read": {
        "accessibleFrom": ["root", "school-list"],
        "href": "/{id}",
        "isUrlTemplate": true,
        "method": "get"
      }
    }
  },
  "user": {
    "prefix": "/api/user",
    "transitions": {
      "user-list":{
        "accessibleFrom": ["root"],
        "href": "/",
        "method": "get"
      }
    }
  },
  "auth": {
    "prefix": "/api/auth",
    "transitions": {
      "auth": {
        "accessibleFrom": ["root"],
        "href": "/",
        "method": "post",
        "template": {
          "email": "string",
        "password": "string"
        }
      } 
    }
  }
}
